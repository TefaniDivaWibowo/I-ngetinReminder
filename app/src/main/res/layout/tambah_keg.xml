<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Nama Kegiatan"
            android:inputType="text" />/>

        <EditText
            android:id="@+id/etcatatan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:hint="Catatan"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="@android:color/holo_red_dark" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/in_date"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/in_date"
                android:layout_toRightOf="@+id/in_date"
                android:background="@drawable/kalender" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btn_date"
                android:layout_alignStart="@+id/btn_date"
                android:layout_below="@+id/btn_date"
                android:layout_marginTop="10dp"
                android:background="@drawable/jam" />

            <EditText
                android:id="@+id/in_date"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/in_time"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/in_time"
                android:hint="9-11-17" />

            <EditText
                android:id="@+id/in_time"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_time"
                android:hint="09 : 30" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonTambah"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onClick (tambah_keg)"
            android:text="Tambahkan Kegiatan"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>

